#!/usr/bin/env perl
use strict;
use warnings;
use YAML::XS;
use Digest::MD5;

eval
{
    local $/ = undef;
    my (  %param, $i ) = %{ YAML::XS::Load( <> ) };

    my ( $file ) = @{$param{argv}};
    die "file undef" unless $file;
    die "Can't open '$file': $!" unless open my  $fh, '+<', $file;

    while(<$fh>) { print $_; }

    seek $fh, 0, 0;
    print Digest::MD5->new()->addfile( $fh )->hexdigest();
    exit 0;
};
print $@;
exit 1;
