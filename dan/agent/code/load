#!/usr/bin/env perl
use strict;
use warnings;
use YAML::XS;
use Digest::MD5;

eval
{
    local $/ = undef;
    my (  %param, $i ) = %{ YAML::XS::Load( <> ) };

    my ( $file, $position ) = @{$param{argv}} or "file undef";

    die "Can't open '$file': $!" unless open my  $fh, '+<', $file;
    seek $fh, $position || 0, 0;

    while( <$fh> ) { print $_; }

    seek $fh, 0, 0;
    print Digest::MD5->new()->addfile( $fh )->hexdigest();
    exit 0;
};
print $@;
exit 1;
